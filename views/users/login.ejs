<% layout('layouts/boilerplate') %>
<%- include("../partials/flash.ejs") %>

<div class="col-6 offset-3 mb-3 d-flex justify-content-center">
    <div class="card shadow p-2" style="width: 40vh;">
        <img class="card-img-top" src="<%= loginImage[Math.floor(Math.random() * loginImage.length)] %>" alt="">
        <div class="card-body">

            <h1 class="mb-4 text-center">Login</h1>
            <form action="/login" method="POST" novalidate class="validate-form">
                <div class="mb-3">
                <label for="username" class="form-label">User Name</label>
                <input class="form-control" type="text" id="username" name="username" autofocus required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required>
            </div>
            <div>
                <input class="form-control" type="hidden" name="returnTo" value="<%= returnTo %>" required>
            </div>
            
            <button class="btn btn-success w-100 mb-3" type="submit">Login</button>
        </form>
    </div>
</div>
</div>